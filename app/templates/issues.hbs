<table class="table table-bordered">
  <thead>
    <tr>
      <th>Submission Timestamp</th>
      <th>Customer Name</th>
      <th>Customer Email Address</th>
      <th>Description</th>
      <th>Open/Closed Status</th>
      <th>Closed Timestamp</th>
      <th>Employee Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |issue|}}
      <tr>
        <td>{{issue.created_at}}</td>
        <td>{{issue.user.login}}</td>
        <td>{{concat issue.user.login "@users.noreply.github.com"}}</td>
        <td>{{issue.title}}</td>
        <td>{{issue.state}}</td>
        <td>{{issue.closed_at}}</td>
        <td>{{issue.assignee.login}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>