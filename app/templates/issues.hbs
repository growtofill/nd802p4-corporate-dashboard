<table class="table table-bordered">
  <thead>
    <tr>
      {{column-controls title="Submission Timestamp" sortDef="createdAt" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
      {{column-controls title="Customer Name" sortDef="userLogin" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
      {{column-controls title="Customer Email Address" sortDef="userEmail" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
      {{column-controls title="Description" sortDef="title" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
      {{column-controls title="Open/Closed Status" sortDef="state" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
      {{column-controls title="Closed Timestamp" sortDef="closedAt" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
      {{column-controls title="Employee Name" sortDef="assigneeLogin" onSort=(action "sortIssues") onFilter=(action "filterIssues")}}
    </tr>
  </thead>
  <tbody>
    {{#each sortedIssues as |issue|}}
      <tr>
        <td>{{issue.createdAt}}</td>
        <td>{{issue.userLogin}}</td>
        <td>{{issue.userEmail}}</td>
        <td>{{issue.title}}</td>
        <td>{{issue.state}}</td>
        <td>{{issue.closedAt}}</td>
        <td>{{issue.assigneeLogin}}</td>
      </tr>
    {{else}}
      <tr>
        <td colspan="7" class="lead text-center">There are no issues matching current filters.</td>
      </tr>
    {{/each}}
  </tbody>
</table>
